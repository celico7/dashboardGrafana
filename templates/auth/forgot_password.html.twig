{% extends 'base.html.twig' %}

{% block title %}Mot de passe oublié - IUT Haguenau{% endblock %}

{% block stylesheets %}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
<link rel="stylesheet" href="{{ asset('css/auth.css') }}">
{% endblock %}

{% block body %}
    <div class="auth-container auth-full-screen">
        <div class="auth-card">
            <div class="auth-form-container">
                <div class="auth-header">
                    <div class="auth-logo">
                        <i class="bi bi-key-fill"></i>
                    </div>
                    <h1 class="auth-title">Mot de passe oublié</h1>
                    <p class="auth-subtitle">Entrez votre email pour recevoir un lien de réinitialisation</p>
                </div>

                {# Si vous utilisez un FormType Symfony, utilisez form_start pour générer les bons noms et le token CSRF #}
                {% if requestForm is defined %}
                    {{ form_start(requestForm) }}
                {% else %}
                    <form method="post">
                {% endif %}

                    <div class="form-group">
                        <label for="email">Email</label>
                        <div class="input-wrapper">
                            <i class="bi bi-envelope"></i>
                            {# On s'assure que le name est correct pour Symfony Form #}
                            <input type="email" name="{{ requestForm is defined ? 'reset_password_request_form[email]' : 'email' }}" id="email" class="form-control" placeholder="votre.email@exemple.com" required autofocus>
                        </div>
                    </div>

                    <button class="auth-btn" type="submit">
                        Envoyer le lien
                    </button>

                    <div class="auth-footer">
                        <p>Retour à la <a href="{{ path('app_login') }}">connexion</a></p>
                    </div>

                {% if requestForm is defined %}
                    {{ form_end(requestForm) }}
                {% else %}
                    </form>
                {% endif %}
            </div>
            <div class="auth-image-container">
                <img src="{{ asset('images/iut-haguenau.webp') }}" alt="IUT Haguenau">
            </div>
        </div>
    </div>
{% endblock %}
