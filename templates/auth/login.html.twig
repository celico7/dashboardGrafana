{% extends 'base.html.twig' %}

{% block title %}Connexion - IUT Haguenau{% endblock %}

{% block stylesheets %}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
<link rel="stylesheet" href="{{ asset('css/auth.css') }}">
{% endblock %}

{% block body %}
    <div class="auth-container auth-full-screen">
        <div class="auth-card">
            <div class="auth-form-container">
                <div class="auth-header">
                    <div class="auth-logo">
                        <i class="bi bi-lightning-charge-fill"></i>
                    </div>
                    <h1 class="auth-title">Bienvenue</h1>
                    <p class="auth-subtitle">Connectez-vous pour accéder au dashboard énergétique</p>
                </div>

                <form method="post">
                    {% if error %}
                        <div class="auth-error">
                            <i class="bi bi-exclamation-circle"></i>
                            {{ error.messageKey|trans(error.messageData, 'security') }}
                        </div>
                    {% endif %}

                    <div class="form-group">
                        <label for="inputEmail">Email</label>
                        <div class="input-wrapper">
                            <i class="bi bi-envelope"></i>
                            <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus placeholder="votre@email.fr">
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="inputPassword">Mot de passe</label>
                        <div class="input-wrapper">
                            <i class="bi bi-lock"></i>
                            <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required placeholder="••••••••••••">
                            <button class="toggle-visibility" type="button" data-target="inputPassword" aria-label="Afficher/masquer le mot de passe">
                                <i class="bi bi-eye"></i>
                            </button>
                        </div>
                    </div>

                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                    <button class="auth-btn" type="submit">
                        Se connecter
                    </button>

                    <div class="forgot-password-link">
                        <a href="{{ path('app_forgot_password') }}">Mot de passe oublié ?</a>
                    </div>

                    <div class="auth-footer">
                        <p>Pas encore de compte ? <a href="{{ path('app_register') }}">Créer un compte</a></p>
                    </div>
                </form>

                <div class="auth-credits">
                    <p>Développé par
                        <a href="https://github.com/melindaland" target="_blank" class="credit-name">ALAND Mélinda</a>,
                        <a href="https://baslan67.github.io/portfolio/" target="_blank" class="credit-name">ASLAN Baran</a> et
                        <a href="https://github.com/celico7" target="_blank" class="credit-name">HOFFMANN Célia</a> - 2026
                    </p>
                </div>
            </div>
            <div class="auth-image-container">
                <img src="{{ asset('images/iut-haguenau.webp') }}" alt="IUT Haguenau">
            </div>
        </div>
    </div>

    {% for message in app.flashes('success') %}
        <div class="success-toast" id="successToast">
            <i class="bi bi-check-circle-fill"></i>
            <span>{{ message }}</span>
        </div>
    {% endfor %}
{% endblock %}

{% block javascripts %}
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const toggleButtons = document.querySelectorAll('.toggle-visibility');
            
            toggleButtons.forEach(function(btn) {
                btn.addEventListener('click', function(e) {
                    e.preventDefault();
                    e.stopPropagation();
                    
                    const targetId = this.getAttribute('data-target');
                    const target = document.getElementById(targetId);
                    
                    if (!target) {
                        console.error('Target input not found:', targetId);
                        return;
                    }
                    
                    const currentType = target.getAttribute('type');
                    const isPassword = currentType === 'password';
                    
                    // Change le type de l'input
                    target.setAttribute('type', isPassword ? 'text' : 'password');
                    
                    // Change l'icône
                    const icon = this.querySelector('i');
                    if (icon) {
                        if (isPassword) {
                            icon.className = 'bi bi-eye-slash';
                        } else {
                            icon.className = 'bi bi-eye';
                        }
                    }
                });
            });

        // Animation du toast de succès
        const successToast = document.getElementById('successToast');
        if (successToast) {
            setTimeout(function() {
                successToast.classList.add('show');
            }, 100);
            
            setTimeout(function() {
                successToast.classList.remove('show');
            }, 5000);
            
            setTimeout(function() {
                successToast.remove();
            }, 5500);
        }
    });
    </script>
{% endblock %}