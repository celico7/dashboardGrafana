{% extends 'base.html.twig' %}

{% block title %}Connexion - IUT Haguenau{% endblock %}

{% block stylesheets %}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
<link rel="stylesheet" href="{{ asset('css/auth.css') }}">
{% endblock %}

{% block body %}
    <div class="auth-container auth-full-screen">
        <div class="auth-card">
            <div class="auth-form-container">
                <div class="auth-header">
                    <div class="auth-logo">
                        <i class="bi bi-lightning-charge-fill"></i>
                    </div>
                    <h1 class="auth-title">Bienvenue</h1>
                    <p class="auth-subtitle">Connectez-vous pour accéder au dashboard énergétique</p>
                </div>

                <form method="post">
                    {% if error %}
                        <div class="auth-error">
                            <i class="bi bi-exclamation-circle"></i>
                            {{ error.messageKey|trans(error.messageData, 'security') }}
                        </div>
                    {% endif %}

                    <div class="form-group">
                        <label for="inputEmail">Email</label>
                        <div class="input-wrapper">
                            <i class="bi bi-envelope"></i>
                            <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus placeholder="votre@email.fr">
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="inputPassword">Mot de passe</label>
                        <div class="input-wrapper">
                            <i class="bi bi-lock"></i>
                            <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required placeholder="••••••••••••">
                        </div>
                    </div>

                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                    <button class="auth-btn" type="submit">
                        Se connecter
                    </button>

                    <div class="auth-footer">
                        <p>Pas encore de compte ? <a href="{{ path('app_register') }}">Créer un compte</a></p>
                    </div>
                </form>
            </div>
            <div class="auth-image-container">
                <img src="{{ asset('images/iut-haguenau.png') }}" alt="IUT Haguenau">
            </div>
        </div>
    </div>
{% endblock %}
