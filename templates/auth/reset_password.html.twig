{% extends 'base.html.twig' %}

{% block title %}Réinitialisation - IUT Haguenau{% endblock %}

{% block stylesheets %}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
<link rel="stylesheet" href="{{ asset('css/auth.css') }}">
{% endblock %}

{% block body %}
    <div class="auth-container auth-full-screen">
        <div class="auth-card">
            <div class="auth-form-container">
                <div class="auth-header">
                    <div class="auth-logo">
                        <i class="bi bi-shield-lock-fill"></i>
                    </div>
                    <h1 class="auth-title">Nouveau mot de passe</h1>
                    <p class="auth-subtitle">Choisissez un mot de passe sécurisé</p>
                </div>

                <form method="post">
                    <div class="form-group">
                        <label for="password">Nouveau mot de passe</label>
                        <div class="input-wrapper">
                            <i class="bi bi-lock"></i>
                            <input type="password" name="password" id="password" class="form-control" placeholder="••••••••••••" required>
                            <button class="toggle-visibility" type="button" data-target="password" aria-label="Afficher/masquer le mot de passe">
                                <i class="bi bi-eye"></i>
                            </button>
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="password_confirm">Confirmer le mot de passe</label>
                        <div class="input-wrapper">
                            <i class="bi bi-lock-fill"></i>
                            <input type="password" name="password_confirm" id="password_confirm" class="form-control" placeholder="••••••••••••" required>
                            <button class="toggle-visibility" type="button" data-target="password_confirm" aria-label="Afficher/masquer le mot de passe">
                                <i class="bi bi-eye"></i>
                            </button>
                        </div>
                        {% if errors.password is defined %}
                            <div class="field-error">
                                {% for error in errors.password %}
                                    {{ error }}<br>
                                {% endfor %}
                            </div>
                        {% endif %}
                    </div>

                    <button class="auth-btn" type="submit">
                        Mettre à jour
                    </button>

                    <div class="auth-footer">
                        <p>Retour à la <a href="{{ path('app_login') }}">Connexion</a></p>
                    </div>
                </form>
            </div>
            <div class="auth-image-container">
                <img src="{{ asset('images/iut-haguenau.webp') }}" alt="IUT Haguenau">
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const toggleButtons = document.querySelectorAll('.toggle-visibility');
            
            toggleButtons.forEach(function(btn) {
                btn.addEventListener('click', function(e) {
                    e.preventDefault();
                    e.stopPropagation();
                    
                    const targetId = this.getAttribute('data-target');
                    const target = document.getElementById(targetId);
                    
                    if (!target) {
                        console.error('Target input not found:', targetId);
                        return;
                    }
                    
                    const currentType = target.getAttribute('type');
                    const isPassword = currentType === 'password';
                    
                    // Change le type de l'input
                    target.setAttribute('type', isPassword ? 'text' : 'password');
                    
                    // Change l'icône
                    const icon = this.querySelector('i');
                    if (icon) {
                        if (isPassword) {
                            icon.className = 'bi bi-eye-slash';
                        } else {
                            icon.className = 'bi bi-eye';
                        }
                    }
                });
            });
        });
    </script>
{% endblock %}
