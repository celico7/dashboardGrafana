{% extends 'base.html.twig' %}

{% block title %}Inscription - IUT Haguenau{% endblock %}

{% block stylesheets %}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
<link rel="stylesheet" href="{{ asset('css/auth.css') }}">
{% endblock %}

{% block body %}
    <div class="auth-container auth-full-screen">
        <div class="auth-card">
            <div class="auth-form-container">
                <div class="auth-header">
                    <div class="auth-logo">
                        <i class="bi bi-lightning-charge-fill"></i>
                    </div>
                    <h1 class="auth-title">Créer un compte</h1>
                    <p class="auth-subtitle">Rejoignez le dashboard énergétique de l'IUT</p>
                </div>

                <form method="POST" class="auth-form">
                    <div class="form-group">
                        <label for="fullname">Nom complet</label>
                        <div class="input-wrapper">
                            <i class="bi bi-person"></i>
                            <input type="text" name="fullname" id="fullname" class="form-control" placeholder="Votre nom complet" required value="{{ fullname ?? '' }}">
                        </div>
                        {% if errors.fullname is defined %}
                            <div class="field-error">
                                {% for error in errors.fullname %}
                                    {{ error }}
                                {% endfor %}
                            </div>
                        {% endif %}
                    </div>

                    <div class="form-group">
                        <label for="email">Email</label>
                        <div class="input-wrapper">
                            <i class="bi bi-envelope"></i>
                            <input type="email" name="email" id="email" class="form-control" placeholder="votre.email@exemple.com" required value="{{ email ?? '' }}">
                        </div>
                        {% if errors.email is defined %}
                            <div class="field-error">
                                {% for error in errors.email %}
                                    {{ error }}
                                {% endfor %}
                            </div>
                        {% endif %}
                    </div>

                    <div class="form-group">
                        <label for="role">Type de compte</label>
                        <div class="input-wrapper">
                            <i class="bi bi-shield-lock"></i>
                            <select name="role" id="role" required class="form-control input-select">
                                <option value="">-- Sélectionnez un rôle --</option>
                                <option value="ROLE_PROFESSEUR">Professeur</option>
                                <option value="ROLE_ETUDIANT">Étudiant</option>
                                <option value="ROLE_GESTIONNAIRE">Gestionnaire</option>
                            </select>
                        </div>
                        {% if errors.role is defined %}
                            <div class="field-error">
                                {% for error in errors.role %}
                                    {{ error }}
                                {% endfor %}
                            </div>
                        {% endif %}
                    </div>

                    <div class="form-group">
                        <label for="register_password">Mot de passe</label>
                        <div class="input-wrapper has-toggle">
                            <i class="bi bi-lock"></i>
                            <input id="register_password" type="password" name="password" class="form-control" placeholder="12 caractères min, 1 chiffre, 1 caractère spécial" required>
                            <button class="toggle-visibility" type="button" data-target="register_password" aria-label="Afficher/masquer le mot de passe">
                                <i class="bi bi-eye eye-open"></i>
                                <i class="bi bi-eye-slash eye-closed" style="display:none;"></i>
                            </button>
                        </div>
                        <div id="password-error" class="field-error" style="display: none;"></div>
                        {% if errors.password is defined %}
                            <div class="field-error">
                                {% for error in errors.password %}
                                    {{ error }}<br>
                                {% endfor %}
                            </div>
                        {% endif %}
                    </div>

                    <div class="form-group">
                        <label for="register_password_confirm">Confirmer le mot de passe</label>
                        <div class="input-wrapper has-toggle">
                            <i class="bi bi-lock-fill"></i>
                            <input id="register_password_confirm" type="password" name="password_confirm" class="form-control" placeholder="Confirmez votre mot de passe" required>
                            <button class="toggle-visibility" type="button" data-target="register_password_confirm" aria-label="Afficher/masquer la confirmation du mot de passe">
                                <i class="bi bi-eye eye-open"></i>
                                <i class="bi bi-eye-slash eye-closed" style="display:none;"></i>
                            </button>
                        </div>
                        {% if errors.password_confirm is defined %}
                            <div class="field-error">
                                {% for error in errors.password_confirm %}
                                    {{ error }}
                                {% endfor %}
                            </div>
                        {% endif %}
                    </div>

                    <button type="submit" class="auth-btn">S'inscrire</button>
                </form>

                <div class="auth-footer">
                    <p>Vous avez déjà un compte ? <a href="{{ path('app_login') }}">Se connecter</a></p>
                </div>

                <div class="auth-credits">
                    <p>Développé par
                        <a href="https://github.com/melindaland" target="_blank" class="credit-name">ALAND Mélinda</a>,
                        <a href="https://baslan67.github.io/portfolio/" target="_blank" class="credit-name">ASLAN Baran</a> et
                        <a href="https://github.com/celico7" target="_blank" class="credit-name">HOFFMANN Célia</a> - 2026
                    </p>
                </div>
            </div>

            <div class="auth-image-container">
                <img src="{{ asset('images/iut-haguenau.webp') }}" alt="IUT Haguenau">
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script>
        // Toggle visibility avec icônes œil ouvert/fermé
        document.addEventListener('DOMContentLoaded', function() {
            const toggleButtons = document.querySelectorAll('.toggle-visibility');
            
            toggleButtons.forEach(function(btn) {
                btn.addEventListener('click', function(e) {
                    e.preventDefault();
                    e.stopPropagation();
                    
                    const targetId = this.getAttribute('data-target');
                    const target = document.getElementById(targetId);
                    
                    if (!target) {
                        console.error('Target input not found:', targetId);
                        return;
                    }
                    
                    const currentType = target.getAttribute('type');
                    const isPassword = currentType === 'password';
                    
                    // Change le type de l'input
                    target.setAttribute('type', isPassword ? 'text' : 'password');
                    
                    // Change l'icône
                    const icon = this.querySelector('i');
                    if (icon) {
                        if (isPassword) {
                            icon.className = 'bi bi-eye-slash';
                        } else {
                            icon.className = 'bi bi-eye';
                        }
                    }
                });
            });
        });

        // Validation du mot de passe en temps réel
        var passwordInput = document.getElementById('register_password');
        var passwordError = document.getElementById('password-error');
        var form = document.querySelector('.auth-form');

        function validatePassword(password) {
            var errors = [];
            if (password.length < 12) {
                errors.push('Le mot de passe doit contenir au moins 12 caractères');
            }
            if (!/[0-9]/.test(password)) {
                errors.push('Le mot de passe doit contenir au moins 1 chiffre');
            }
            if (!/[!@#$%^&*(),.?":{}|<>_\-+=\[\]\\\/ ;~`]/.test(password)) {
                errors.push('Le mot de passe doit contenir au moins 1 caractère spécial');
            }
            return errors;
        }

        if (passwordInput && passwordError) {
            passwordInput.addEventListener('input', function() {
                var errors = validatePassword(this.value);
                if (this.value && errors.length > 0) {
                    passwordError.innerHTML = errors.join('<br>');
                    passwordError.style.display = 'block';
                } else {
                    passwordError.style.display = 'none';
                }
            });

            form.addEventListener('submit', function(e) {
                var errors = validatePassword(passwordInput.value);
                if (errors.length > 0) {
                    e.preventDefault();
                    passwordError.innerHTML = errors.join('<br>');
                    passwordError.style.display = 'block';
                    passwordInput.focus();
                }
            });
        }
    </script>
{% endblock %}
