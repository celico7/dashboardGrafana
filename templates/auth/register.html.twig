<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Inscription - Tableau de Bord Énergétique</title>
    <link rel="stylesheet" href="{{ asset('css/auth.css') }}">
</head>
<body>
    <div class="auth-container">
        <div class="auth-left">
            <div class="auth-card">

                <div class="auth-header">
                    <h1>Créer votre compte</h1>
                </div>

                <form method="POST" class="auth-form">
                    <div class="form-group">
                        <label>Nom complet</label>
                        <div class="input-wrapper">
                            <input type="text" name="fullname" placeholder="Votre nom complet" required value="{{ fullname ?? '' }}">
                        </div>
                        {% if errors.fullname is defined %}
                            <div class="field-error">
                                {% for error in errors.fullname %}
                                    {{ error }}
                                {% endfor %}
                            </div>
                        {% endif %}
                    </div>

                    <div class="form-group">
                        <label>Email</label>
                        <div class="input-wrapper">
                            <input type="email" name="email" placeholder="votre.email@exemple.com" required value="{{ email ?? '' }}">
                            <svg class="input-icon" viewBox="0 0 24 24"><path d="M20 4H4c-1.1 0-1.99.9-1.99 2L2 18c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2V6c0-1.1-.9-2-2-2zm0 4l-8 5-8-5V6l8 5 8-5v2z"/></svg>
                        </div>
                        {% if errors.email is defined %}
                            <div class="field-error">
                                {% for error in errors.email %}
                                    {{ error }}
                                {% endfor %}
                            </div>
                        {% endif %}
                    </div>

                    <div class="form-group">
                        <label>Type de compte</label>
                        <select name="role" required class="input-select" value="{{ role ?? '' }}">
                            <div class="role-option">
                            <option value="">-- Sélectionnez un rôle --</option>
                            <option value="ROLE_PROFESSEUR">Professeur</option>
                            <option value="ROLE_ETUDIANT">Étudiant</option>
                            <option value="ROLE_GESTIONNAIRE">Gestionnaire</option>
                            </div>
                        </select>
                        {% if errors.role is defined %}
                            <div class="field-error">
                                {% for error in errors.role %}
                                    {{ error }}
                                {% endfor %}
                            </div>
                        {% endif %}
                    </div>

                    <div class="form-group">
                        <label>Mot de passe</label>
                        <div class="input-wrapper has-toggle">
                            <input id="register_password" type="password" name="password" placeholder="12 caractères min, 1 chiffre, 1 caractère spécial" required>
                            <button class="toggle-visibility" type="button" data-target="register_password" aria-label="Afficher/masquer le mot de passe">
                                <svg class="eye-icon" viewBox="0 0 24 24" fill="currentColor">
                                    <path class="eye-open" d="M12 4.5C7 4.5 2.73 7.61 1 12c1.73 4.39 6 7.5 11 7.5s9.27-3.11 11-7.5c-1.73-4.39-6-7.5-11-7.5zM12 17c-2.76 0-5-2.24-5-5s2.24-5 5-5 5 2.24 5 5-2.24 5-5 5zm0-8c-1.66 0-3 1.34-3 3s1.34 3 3 3 3-1.34 3-3-1.34-3-3-3z"/>
                                    <path class="eye-closed" style="display:none;" d="M12 7c2.76 0 5 2.24 5 5 0 .65-.13 1.26-.36 1.83l2.92 2.92c1.51-1.26 2.7-2.89 3.43-4.75-1.73-4.39-6-7.5-11-7.5-1.4 0-2.74.25-3.98.7l2.16 2.16C10.74 7.13 11.35 7 12 7zM2 4.27l2.28 2.28.46.46C3.08 8.3 1.78 10.02 1 12c1.73 4.39 6 7.5 11 7.5 1.55 0 3.03-.3 4.38-.84l.42.42L19.73 22 21 20.73 3.27 3 2 4.27zM7.53 9.8l1.55 1.55c-.05.21-.08.43-.08.65 0 1.66 1.34 3 3 3 .22 0 .44-.03.65-.08l1.55 1.55c-.67.33-1.41.53-2.2.53-2.76 0-5-2.24-5-5 0-.79.2-1.53.53-2.2zm4.31-.78l3.15 3.15.02-.16c0-1.66-1.34-3-3-3l-.17.01z"/>
                                </svg>
                            </button>
                        </div>
                        <div id="password-error" class="field-error" style="display: none;"></div>
                        {% if errors.password is defined %}
                            <div class="field-error">
                                {% for error in errors.password %}
                                    {{ error }}<br>
                                {% endfor %}
                            </div>
                        {% endif %}
                    </div>

                    <div class="form-group">
                        <label>Confirmer le mot de passe</label>
                        <div class="input-wrapper has-toggle">
                            <input id="register_password_confirm" type="password" name="password_confirm" placeholder="Confirmez votre mot de passe" required>
                            <button class="toggle-visibility" type="button" data-target="register_password_confirm" aria-label="Afficher/masquer la confirmation du mot de passe">
                                <svg class="eye-icon" viewBox="0 0 24 24" fill="currentColor">
                                    <path class="eye-open" d="M12 4.5C7 4.5 2.73 7.61 1 12c1.73 4.39 6 7.5 11 7.5s9.27-3.11 11-7.5c-1.73-4.39-6-7.5-11-7.5zM12 17c-2.76 0-5-2.24-5-5s2.24-5 5-5 5 2.24 5 5-2.24 5-5 5zm0-8c-1.66 0-3 1.34-3 3s1.34 3 3 3 3-1.34 3-3-1.34-3-3-3z"/>
                                    <path class="eye-closed" style="display:none;" d="M12 7c2.76 0 5 2.24 5 5 0 .65-.13 1.26-.36 1.83l2.92 2.92c1.51-1.26 2.7-2.89 3.43-4.75-1.73-4.39-6-7.5-11-7.5-1.4 0-2.74.25-3.98.7l2.16 2.16C10.74 7.13 11.35 7 12 7zM2 4.27l2.28 2.28.46.46C3.08 8.3 1.78 10.02 1 12c1.73 4.39 6 7.5 11 7.5 1.55 0 3.03-.3 4.38-.84l.42.42L19.73 22 21 20.73 3.27 3 2 4.27zM7.53 9.8l1.55 1.55c-.05.21-.08.43-.08.65 0 1.66 1.34 3 3 3 .22 0 .44-.03.65-.08l1.55 1.55c-.67.33-1.41.53-2.2.53-2.76 0-5-2.24-5-5 0-.79.2-1.53.53-2.2zm4.31-.78l3.15 3.15.02-.16c0-1.66-1.34-3-3-3l-.17.01z"/>
                                </svg>
                            </button>
                        </div>
                        {% if errors.password_confirm is defined %}
                            <div class="field-error">
                                {% for error in errors.password_confirm %}
                                    {{ error }}
                                {% endfor %}
                            </div>
                        {% endif %}
                    </div>

                    <button type="submit" class="btn-login">S'inscrire</button>
                </form>

                <div class="auth-footer">
                    <p>Vous avez déjà un compte ? <a href="{{ path('app_login') }}">Se connecter</a></p>
                </div>
            </div>

            <div class="auth-credits">
                <p>Développé par 
                    <a href="https://github.com/melindaland" target="_blank" class="credit-name">ALAND Mélinda</a>, 
                    <a href="#" class="credit-name">ASLAN Baran</a> et 
                    <a href="https://github.com/celico7" target="_blank" class="credit-name">HOFFMANN Célia</a> - 2026
                </p>
            </div>
        </div>

        <div class="auth-right">
            <img src="{{ asset('images/iut-haguenau.png') }}" alt="Bâtiment de l'IUT de Haguenau">
        </div>
    </div>

    <script>
        // Toggle visibility avec icônes œil ouvert/fermé
        document.querySelectorAll('.toggle-visibility').forEach(function (btn) {
            btn.addEventListener('click', function () {
                var target = document.getElementById(this.dataset.target);
                if (!target) return;
                var isPassword = target.getAttribute('type') === 'password';
                target.setAttribute('type', isPassword ? 'text' : 'password');
                
                // Toggle les icônes
                var eyeOpen = this.querySelector('.eye-open');
                var eyeClosed = this.querySelector('.eye-closed');
                if (eyeOpen && eyeClosed) {
                    if (isPassword) {
                        eyeOpen.style.display = 'none';
                        eyeClosed.style.display = 'block';
                    } else {
                        eyeOpen.style.display = 'block';
                        eyeClosed.style.display = 'none';
                    }
                }
            });
        });

        // Validation du mot de passe en temps réel
        var passwordInput = document.getElementById('register_password');
        var passwordError = document.getElementById('password-error');
        var form = document.querySelector('.auth-form');

        function validatePassword(password) {
            var errors = [];
            if (password.length < 12) {
                errors.push('Le mot de passe doit contenir au moins 12 caractères');
            }
            if (!/[0-9]/.test(password)) {
                errors.push('Le mot de passe doit contenir au moins 1 chiffre');
            }
            if (!/[!@#$%^&*(),.?":{}|<>_\-+=\[\]\\\/ ;~`]/.test(password)) {
                errors.push('Le mot de passe doit contenir au moins 1 caractère spécial');
            }
            return errors;
        }

        if (passwordInput && passwordError) {
            passwordInput.addEventListener('input', function() {
                var errors = validatePassword(this.value);
                if (this.value && errors.length > 0) {
                    passwordError.innerHTML = errors.join('<br>');
                    passwordError.style.display = 'block';
                } else {
                    passwordError.style.display = 'none';
                }
            });

            form.addEventListener('submit', function(e) {
                var errors = validatePassword(passwordInput.value);
                if (errors.length > 0) {
                    e.preventDefault();
                    passwordError.innerHTML = errors.join('<br>');
                    passwordError.style.display = 'block';
                    passwordInput.focus();
                }
            });
        }
    </script>
</body>
</html>
