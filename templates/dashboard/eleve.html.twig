{% extends 'base.html.twig' %}

{% block title %}Tableau de Bord Énergétique{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="{{ asset('css/dashboard.css') }}">
    <link rel="stylesheet" href="{{ asset('css/sidebar-dynamic.css') }}">
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('js/sidebar.js') }}"></script>
{% endblock %}

{% block body %}
    <div class="dashboard-layout">
        <!-- Main Content -->
        <main class="main-content">
            <!-- Bouton déconnexion -->
            <a href="{{ path('app_logout') }}" class="logout-btn">
                <i class="bi bi-box-arrow-right"></i>
                <span>Déconnexion</span>
            </a>
            
            <!-- Page Header -->
            <header class="page-header">
                <h1 class="page-title">Tableau de Bord Énergétique</h1>
                <p class="page-subtitle">Visualisation de la consommation électrique de l'IUT de Haguenau.</p>
            </header>

            <!-- Top Stats -->
            <section class="stats-row">
                <div class="stat-card">
                    <iframe src="http://localhost:3000/d-solo/adczcsr/tableau-de-bord-vue-par-defaut?orgId=1&from=1768920676182&to=1769158955799&timezone=browser&var-choix_bat=B%C3%A2timent%20A&panelId=panel-1&__feature.dashboardSceneSolo=true" 
                    width="650" height="300" frameborder="0"></iframe>
                </div>

                <div class="stat-card">
                  <iframe src="http://localhost:3000/d-solo/adczcsr/tableau-de-bord-vue-par-defaut?orgId=1&from=1768920676182&to=1769158955799&timezone=browser&var-choix_bat=B%C3%A2timent%20A&panelId=panel-2&__feature.dashboardSceneSolo=true" 
                  width="650" height="300" frameborder="0"></iframe>
                </div>
            </section>

            <!-- Charts -->
            <section class="charts-row">
                <!-- Left Chart - Line -->
                <div class="chart-card">
                    <div class="chart-header">
                        <iframe src="http://localhost:3000/d-solo/adczcsr/tableau-de-bord-vue-par-defaut?orgId=1&from=1768920676182&to=1769158955799&timezone=browser&var-choix_bat=B%C3%A2timent%20A&panelId=panel-3&__feature.dashboardSceneSolo=true" 
                        width="650" height="300" frameborder="0"></iframe>
                    </div>       
                </div>

                <!-- Right Chart - Bars -->
                <div class="chart-card">
                    <iframe src="http://localhost:3000/d-solo/adczcsr/tableau-de-bord-vue-par-defaut?orgId=1&from=1768920676182&to=1769158955799&timezone=browser&var-choix_bat=B%C3%A2timent%20A&panelId=panel-4&__feature.dashboardSceneSolo=true" 
                    width="650" height="300" frameborder="0"></iframe>
                </div>
            </section>

        </main>
    </div>
{% endblock %}
