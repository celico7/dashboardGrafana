{% extends 'base.html.twig' %}

{% block title %}Espace Professeur{% endblock %}

{% block body %}
    <style>
        .dashboard-shell { min-height: 100vh; background: #0f172a; color: #e2e8f0; padding: 48px 32px; font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif; }
        .dashboard-card { max-width: 1100px; margin: 0 auto; background: #111827; border: 1px solid rgba(255, 255, 255, 0.08); border-radius: 20px; padding: 32px; box-shadow: 0 20px 60px rgba(0,0,0,0.35); }
        .dash-header { display: flex; justify-content: space-between; align-items: center; margin-bottom: 24px; gap: 16px; }
        .dash-title { font-size: 28px; font-weight: 700; letter-spacing: -0.01em; }
        .dash-sub { color: #94a3b8; margin-top: 8px; }
        .pill { display: inline-flex; align-items: center; gap: 8px; background: #1e293b; color: #cbd5e1; padding: 10px 14px; border-radius: 999px; font-size: 14px; }
        .pill span { font-weight: 600; color: #a5b4fc; }
        .grid { display: grid; grid-template-columns: repeat(auto-fit, minmax(240px, 1fr)); gap: 16px; margin-top: 24px; }
        .tile { background: #0b1220; border: 1px solid rgba(255,255,255,0.06); border-radius: 16px; padding: 18px; }
        .tile h3 { margin: 0 0 10px 0; font-size: 18px; }
        .tile p { margin: 0; color: #cbd5e1; line-height: 1.5; }
        .link-row { margin-top: 28px; display: flex; justify-content: flex-end; gap: 12px; flex-wrap: wrap; }
        .link-row a { color: #c4d056; font-weight: 600; text-decoration: none; }
        .link-row a:hover { text-decoration: underline; }
    </style>

    <div class="dashboard-shell">
        <div class="dashboard-card">
            <div class="dash-header">
                <div>
                    <div class="dash-title">Espace Professeur</div>
                    <div class="dash-sub">Connecté en tant que {{ app.user.fullname ?? 'professeur' }} ({{ app.user.email ?? '' }})</div>
                    <div class="pill">Rôle actif : <span>PROFESSEUR</span></div>
                </div>
            </div>

            <div class="grid">
                <div class="tile">
                    <h3>Suivi des classes</h3>
                    <p>Accédez aux tableaux de bord par classe et vérifiez l’évolution des consommations.</p>
                </div>
                <div class="tile">
                    <h3>Rapports énergétiques</h3>
                    <p>Téléchargez ou partagez les rapports hebdomadaires pour vos cours et projets.</p>
                </div>
                <div class="tile">
                    <h3>Alertes & seuils</h3>
                    <p>Configurez des alertes pour repérer rapidement les dérives de consommation.</p>
                </div>
                <div class="tile">
                    <h3>Accès Grafana</h3>
                    <p>Consultez les dashboards Grafana détaillés adaptés au profil professeur.</p>
                </div>
            </div>

            <div class="link-row">
                <a href="#">Aller au tableau de bord global</a>
                <a href="{{ path('app_logout') }}">Se déconnecter</a>
            </div>
        </div>
    </div>
{% endblock %}
